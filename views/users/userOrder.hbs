<section class="h-100 gradient-custom">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-10 col-xl-8">
        <div>
            <h5 class="text-muted mb-0" style="text-align: center;">Your Orders{{!--, <span style="color: #a8729a;">Anna</span>!--}}</h5>
        </div>
        {{#each order}}
        <div class="card" style="border-radius: 10px;">
          <div class="card-header px-4 py-5">
            <h5 class="text-muted mb-0">Thanks for your Order{{!--, <span style="color: #a8729a;">Anna</span>!--}}</h5>
          </div>
          <div class="card-body p-4">
            <div class="d-flex justify-content-between align-items-center mb-4">
              <p class="lead fw-normal mb-0" style="color: #a8729a;">Receipt</p>
              <p class="small text-muted mb-0">Order ID : {{orderId}}</p>
            </div>
            <div class="card shadow-0 border mb-4">
              {{#each product}}
              <div class="card-body">
                <div class="row">
                  {{!--<div class="col-md-2">
                    <img src="https://mdbcdn.b-cdn.net/img/Photos/Horizontal/E-commerce/Products/13.webp"
                      class="img-fluid" alt="Phone">
                  </div>--}}
                  <div class="col-md-4 text-center d-flex justify-content-center align-items-center">
                    <p class="text-muted mb-0">Product name : {{name}}</p>
                  </div>
                  <div class="col-md-4 text-center d-flex justify-content-center align-items-center">
                    <p class="text-muted mb-0 small">Price : ₹{{price}}</p>
                  </div>
                  <div class="col-md-4 text-center d-flex justify-content-center align-items-center">
                    <p class="text-muted mb-0 small">Quantity : {{quantity}}</p>
                  </div>
                  
                </div>
                
                {{/each}}
              </div>
            </div>


           <div class="d-flex justify-content-between pt-2">
              <p class="fw-bold mb-0">Order Details</p>
              <p class="text-muted mb-0"><span class="fw-bold me-4">Total Amount</span>₹{{total}}</p>
            </div>

            <div class="d-flex justify-content-between pt-2">
              <p class="text-muted mb-0">Order status : {{status}}</p>
              
            </div>

            <div class="d-flex justify-content-between">
              <p class="text-muted mb-0">Invoice date : {{date}}</p>
              
            </div>

             <div class="d-flex justify-content-between">
              <a class="btn btn-primary" href="/invoice?id={{this._id}}">Invoice</a>
            </div>

            

            <div class="d-flex justify-content-between mb-5">
              {{#ifeq this.status "Processing"}}
              <a href="/cancelorder?id={{this._id}}" class="text-danger text-decoration-none" onclick="return confirm('Are you sure you want to cancel?')" ><strong>Cancel Order</strong></a>
              {{/ifeq}}

              {{#ifeq this.status "Shipped"}}
              <a href="/cancelorder?id={{this._id}}" class="text-danger text-decoration-none" onclick="return confirm('Are you sure you want to cancel?')" ><strong>Cancel Order</strong></a>
              {{/ifeq}}

              {{#ifeq this.status "Delivered"}}
              <a href="/returnorder?id={{this._id}}" class="text-primary text-decoration-none" onclick="return confirm('Are you sure you want to return?')" ><strong>Return</strong></a>
              {{/ifeq}}
              
            </div>
          </div>

            <div>
              
            </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</section>
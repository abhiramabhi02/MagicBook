<section style="background-color: #eee;">
    <div class="container py-5">
        <div class="row">
            <div class="col-lg-4">
                <div class="card mb-4">
                    <div class="card-body text-center">
                        {{#each user}}
                        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava3.webp"
                            alt="avatar" class="rounded-circle img-fluid" style="width: 150px;">
                        <h5 class="my-3">{{Firstname}}</h5>
                        <p class="text-muted mb-4">{{Email}}</p>
                        {{/each}}
                    </div>
                </div>
                <div class="card mb-4 mb-lg-0">
                    <div class="card-body p-0">
                        <ul class="list-group list-group-flush rounded-3">
                            <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                                <div class="d-flex justify-content-center mb-2">
                                    <a class="btn btn-dark " href="/editprofile">Edit profile</a>
                                </div>
                                <div class="d-flex justify-content-center mb-2">
                                    <a class="btn btn-dark " href="/add-address">Add Address</a>
                                </div>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                                <div class="d-flex justify-content-center mb-2">
                                    <a class="btn btn-dark" href="/userorders">My orders</a>
                                </div>
            
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-lg-8">
                <div class="card mb-4">
                    <div class="card-body">
                        <H1>Address</H1>
                        <div class="row">
                            {{#each address}}
                            <div class="col-md-6">
                                <div class="bg-white card addresses-item mb-4 border border-primary shadow">
                                    <div class="gold-members p-4">
                                        <div class="media">
                                            <div class="mr-3"><i class="icofont-ui-home icofont-3x"></i>
                                            </div>
                                            <div class="media-body">
                                                <h6 class="mb-1 text-secondary">Home</h6>
                                                <p class="text-black">{{name}} &nbsp &nbsp
                                                    &nbsp<b>{{number}}</b>
                                                </p>
                                                <p>{{house}}</p>
                                                <p>{{city}}, {{state}}, {{country}}</p>
                                                <p>{{address}}   {{pincode}} </p>
                                                <a class="btn btn-danger" href="/deleteaddress?id={{this._id}}"
                                                    onclick="return confirm('Are You Sure ?')"><i class="fa-sharp fa-solid fa-trash"></i></a>
                                                <a class="btn btn-primary" href="/editaddress?id={{this._id}}"><i class="fa-sharp fa-solid fa-pen-to-square"></i></a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {{/each}}
                            <h2>I will always love you till the end,üòç‚ù§Ô∏è </h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="h-100 h-custom" style="background-color: #eee;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-8 col-xl-6">
        <div class="card border-top border-bottom border-3" style="border-color: #f37a27 !important;">
        
          <div class="card-body p-5">

            <p class="lead fw-bold mb-5" style="color: #f37a27;">Purchase Reciept</p>

            <div class="row">
              <div class="col mb-3">
                <p class="small text-muted mb-1">Date</p>
                <p>{{date2}}</p>
              </div>
              <div class="col mb-3">
                <p class="small text-muted mb-1">Order No.</p>
                <p>{{order.orderId}}</p>
              </div>
              <div class="col mb-3">
                <p class="small text-muted mb-1">Status</p>
                <p>{{order.status}}</p>
              </div>
            </div>
            {{#each order}}
            {{#each product}}
            <div class="mx-n5 px-5 py-4" style="background-color: #f2f2f2;">
              <div class="row">
                <div class="col-md-8 col-lg-9">
                  <p>{{name}}</p>
                </div>
                <div class="col-md-4 col-lg-3">
                  <p>₹{{price}}</p>
                </div>
              </div>
            </div>
                {{/each}}
                {{/each}}
            <div class="row my-4">
              <div class="col-md-4 offset-md-8 col-lg-3 offset-lg-9">
                <p class="lead fw-bold mb-0" style="color: #f37a27;">₹{{order.total}}</p>
              </div>
            </div>

            <p class="lead fw-bold mb-4 pb-2" style="color: #f37a27;">Tracking Order</p>

            <div class="row">
              <div class="col-lg-12">

                <div class="horizontal-timeline">

                  {{#ifeq order.status "Processing"}}

                  <ul class="list-inline items d-flex justify-content-between">
                    <li class="list-inline-item items-list">
                      <p class="py-1 px-2 rounded text-white" style="background-color: #f37a27;">Ordered</p
                        class="py-1 px-2 rounded text-white" style="background-color: #f37a27;">
                    </li>
                    <li class="list-inline-item items-list">
                      <p class="py-1 px-2 rounded text-white" >Shipped</p
                        class="py-1 px-2 rounded text-white" >
                    </li>
                    <li class="list-inline-item items-list">
                      <p class="py-1 px-2 rounded text-white">On the way
                      </p>
                    </li>
                    <li class="list-inline-item items-list text-end" style="margin-right: 8px;">
                      <p style="margin-right: -8px;">Delivered</p>
                    </li>
                  </ul>
                  {{/ifeq}}

                   {{#ifeq order.status "Shipped"}}

                  <ul class="list-inline items d-flex justify-content-between">
                    <li class="list-inline-item items-list">
                      <p class="py-1 px-2 rounded text-white" style="background-color: #f37a27;">Ordered</p
                        class="py-1 px-2 rounded text-white" style="background-color: #f37a27;">
                    </li>
                    <li class="list-inline-item items-list">
                      <p class="py-1 px-2 rounded text-white" style="background-color: #f37a27;" >Shipped</p
                        class="py-1 px-2 rounded text-white" style="background-color: #f37a27;">
                    </li>
                  
                    <li class="list-inline-item items-list text-end" style="margin-right: 8px;">
                      <p style="margin-right: -8px;">Delivered</p>
                    </li>
                  </ul>
                  {{/ifeq}}

                  {{#ifeq order.status "Delivered"}}

                  <ul class="list-inline items d-flex justify-content-between">
                    <li class="list-inline-item items-list">
                      <p class="py-1 px-2 rounded text-white" style="background-color: #f37a27;">Ordered</p
                        class="py-1 px-2 rounded text-white" style="background-color: #f37a27;">
                    </li>
                    <li class="list-inline-item items-list">
                      <p class="py-1 px-2 rounded text-white" style="background-color: #f37a27;" >Shipped</p
                        class="py-1 px-2 rounded text-white" style="background-color: #f37a27;">
                    </li>
                   
                    <li class="list-inline-item items-list">
                      <p class="py-1 px-2 rounded text-white" style="background-color: #f37a27;" >Delivered</p
                        class="py-1 px-2 rounded text-white" style="background-color: #f37a27;">
                    </li>
                  </ul>
                  {{/ifeq}}
                </div>

                
            <div class="d-flex justify-content-between mb-5">
              {{#ifeq order.status "Processing"}}
              <a href="/cancelorder?id={{order._id}}" class="text-danger text-decoration-none"
                onclick="return confirm('Are you sure you want to cancel?')"><strong>Cancel Order</strong></a>
              {{/ifeq}}

              {{#ifeq order.status "Shipped"}}
              <a href="/cancelorder?id={{order._id}}" class="text-danger text-decoration-none"
                onclick="return confirm('Are you sure you want to cancel?')"><strong>Cancel Order</strong></a>
              {{/ifeq}}

              {{#ifeq order.status "Delivered"}}
              <a href="/returnorder?id={{order._id}}" class="text-primary text-decoration-none"
                onclick="return confirm('Are you sure you want to return?')"><strong>Return</strong></a>
              {{/ifeq}}

            </div>

             <div class="d-flex justify-content-between">
              <a class="btn btn-primary" href="/invoice?id={{order._id}}">Invoice</a>
            </div>

              </div>
            </div>

            <hr>
            <br>
                    
          </div>
         
        </div>
      </div>
    </div>
  </div>
</section>
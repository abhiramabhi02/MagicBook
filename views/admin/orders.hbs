
    <div class="container-fluid">
        <div class="sub-container thehome">
            <div class="p-3">
                <h1 class="thenewarrival">Order Management</h1>

                <div class="theArea">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Order id</th>
                                <th scope="col">Products</th>
                                <th scope="col">Date</th>
                                <th scope="col">Payment</th>
                                <th scope="col">Status</th>
                                <th scope="col">Action</th>


                            </tr>
                        </thead>
                        <tbody>
                            {{#each order}}
                            <tr>
                                <td>{{this.orderId}}</td>
                                <td> <a href="/admin/viewproducts?id={{this._id}}" class="btn btn-success">View
                                        Products</a> </td>
                                <td>{{this.date}}</td>
                                {{#ifeq this.payment_method 1}}
                                <td>COD</td>
                                {{/ifeq}}

                                  {{#ifeq this.payment_method 2}}
                                <td>RazorPay</td>
                                {{/ifeq}}
                                <td><strong>{{this.status}}</strong></td>
                                
                                <td>
                                    
                                    {{#ifeq this.status "Processing"}}
                                    <a href="/admin/shiporder?id={{this._id}}" class="btn btn-warning " onclick="return confirm('Are you sure?')" >Ship Order</a>
                                    {{/ifeq}}

                                    {{#ifeq this.status "Shipped"}}
                                    <a href="/admin/deliverorder?id={{this._id}}" class="btn btn-primary" onclick="return confirm('Are you sure?')" >Deliver Order</a>
                                    {{/ifeq}}
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

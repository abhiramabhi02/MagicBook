          <body>
  <div class="container-fluid">
    <div class="container">
      <div class="row">
        <div class="col-md-12">

        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <div class="card">
            <div class="card-header">
              <div class="row">
                <div class="col-md-6">
                  <h3 class="card-title">Users Management</h3>
                </div>
              </div>
            </div>
            <div class="card-body">
              <table class="table table-bordered table-striped">
                <thead>
                  <tr>
                    <th>No.</th>
                    <th scope="col">Firstname</th>
                    <th scope="col">Lastname</th>
                    <th scope="col">Email</th>
                    <th scope="col">Status</th>
                    <th scope="col">Actions</th>
                  </tr>
                </thead>
                <tbody>
                  {{#each users}}
                  <tr>
                    <td>{{@index}}</td>
                    <td>{{this.Firstname}}</td>
                    <td>{{this.Lastname}}</td>
                    <td>{{this.Email}}</td>
                    {{#ifeq this.is_verified 0}}
                    <td class="text-danger">Not Verified</td>
                    {{/ifeq}}

                    {{#ifeq this.is_verified 1}}
                    <td class="text-success"> Verified</td>
                    {{/ifeq}}
                    <td>
                      {{#if this.Block}}
                      <a href="/admin/unblockuser?id={{this._id}}" class="btn btn-success" onclick="return confirm('Are you sure?')">Unblock</a>
                      {{else}}
                      <a href="/admin/blockuser?id={{this._id}}" class="btn btn-danger" onclick="return confirm('Are you sure?')">Block</a>
                      {{/if}}
                    </td>
                  </tr>
                  {{/each}}
                  <!-- more rows -->
                </tbody>
             <tfoot>
  <tr>
    <td colspan="5">
      <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
          {{#paginate users total=10}}
            {{#if isDots}}
              <li class="page-item disabled"><a class="page-link" href="#">{{label}}</a></li>
            {{else}}
              <li class="page-item {{#if isActive}}active{{/if}}"><a class="page-link" href="?page={{page}}">{{label}}</a></li>
            {{/if}}
          {{/paginate}}
        </ul>
      </nav>
    </td>
  </tr>
</tfoot>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>


<script>
  // Get the current page from the URL
  var urlParams = new URLSearchParams(window.location.search);
  var currentPage = parseInt(urlParams.get('page')) || 1;

  // Set the active class on the current page
  $('.pagination li').removeClass('active');
  $('.pagination li').eq(currentPage).addClass('active');

  // Hide and show the appropriate rows based on the current page
  var itemsPerPage = 10;
  var startIndex = (currentPage - 1) * itemsPerPage;
  var endIndex = startIndex + itemsPerPage;
  $('tbody tr').hide();
  $('tbody tr').slice(startIndex, endIndex).show();
</script>
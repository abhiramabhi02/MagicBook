
<body>
  <div class="container-fluid">
    <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h1 class="text-center">Product Listing</h1>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <div class="card">
          <div class="card-header">
            <div class="row">
              <div class="col-md-6">
                <h3 class="card-title">Product List</h3>
              </div>
              <div class="col-md-6 text-right">
                <a href="/admin/addproduct" class="btn btn-primary"><i class="fas fa-plus"></i> Add Product</a>
              </div>
            </div>
          </div>
          <div class="card-body">
            <table class="table table-bordered table-striped">
              <thead>
                <tr>
                  <th>No.</th>
                  <th>Name</th>
                  <th>Category</th>
                  <th>Actions</th>
                </tr>
              </thead>
               {{#each products}}
              <tbody>
                <tr>
                  <td> {{@index}}</td>
                  <td>{{this.Name}}</td>
                  <td>{{this.Category}}</td>
                  <td>
                    <a href="#" class="btn btn-primary"><i class="fas fa-edit"></i> Edit</a>
                    <a href="#" class="btn btn-danger"><i class="fas fa-trash"></i> Delete</a>
                  </td>
                </tr>
                 {{/each}}
                <!-- more rows -->
              </tbody>
            </table>
            </div>
          </div>
          </body>
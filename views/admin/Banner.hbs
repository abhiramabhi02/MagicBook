<div class="container-fluid">
        <div class="sub-container thehome">
            <div class="p-3">
                <h1 class="thenewarrival">Category Management</h1>
                <div class="p-3">
                    <form class="d-flex">
                        <a href="/admin/addBanner" class="btn btn-success">Add Banner</a>
                    </form>
                </div>
                <div class="theArea">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Badge</th>
                                <th scope="col">Name</th>
                                <th scope="col">Actions</th>
                                
                            </tr>
                        </thead>
                        <tbody>
                            {{#each bannerData}}
                            <tr>
                                <td><img src="/productImages/{{this.Badge}}" width="100px" height="100px"></td>
                                  <td>{{this.Name}}</td>
                                <td>
                                    <a href="/admin/editbanner?id={{this._id}}" class="btn btn-primary">Edit</a>
                                    <a href="/admin/deletecategory?id={{this._id}}" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete?')">Delete</a>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>